{
	"manifest_version": 3,

	"name": "Flough",
	"description": "Flough is a git manager used to effectively create commit messages and git branch names all at the click of a button.",
	"version": "0.0.8",

	"permissions": [
		"storage",
		"clipboardWrite",
		"scripting"
	],

	"host_permissions": [ 
		"http://*/*",
		"https://*/*"
	],

	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},

	"background": {
	},

	"options_page" : "html/options.html",

	"action": {
		"default_title": "Flough",
		"default_icon": "images/icon48.png",
		"default_popup": "html/popup.html"
	},
	"content_security_policy": {
		"extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'self';"
	}

}